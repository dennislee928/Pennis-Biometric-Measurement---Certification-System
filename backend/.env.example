# Supabase PostgreSQL (use connection string from Supabase Dashboard -> Settings -> Database)
DATABASE_URL=postgres://postgres:[YOUR-PASSWORD]@db.[PROJECT-REF].supabase.co:5432/postgres

# Certificate HMAC secret (backend only; must match same payload format as frontend)
CERT_HMAC_SECRET=your-cert-hmac-secret

# Persona Webhook secret (from Persona Dashboard -> Webhooks)
PERSONA_WEBHOOK_SECRET=whsec_xxxx

# Supabase JWT secret (from Supabase Dashboard -> Settings -> API -> JWT Secret) for verifying access_token
SUPABASE_JWT_SECRET=your-jwt-secret

# Optional: server port
PORT=8080

# Optional: allowed CORS origin (frontend URL)
CORS_ORIGIN=http://localhost:3000

# Optional: path to store collected ROI images (recognized / not_recognized). If set, POST /api/collection is enabled.
# COLLECTION_STORAGE_PATH=./data/collection
